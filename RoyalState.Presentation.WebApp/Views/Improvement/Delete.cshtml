@using RoyalState.Core.Application.ViewModels.Improvements;
@model ImprovementViewModel;

@{
    ViewData["Title"] = "Delete Improvement";
    Layout = "~/Views/Shared/_LayoutSmall.cshtml";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-white">
                <h4>Are you sure you want to delete this type of sale and the associated properties?</h4>
            </div>
            <div class="card-body">
                <div class="p-2">
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Description:</strong>@Model.Description</p>
                </div>
            </div>
            <div class="card-footer bg-white">
                <form method="post" asp-controller="Improvement" asp-action="Delete">
                    
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-6">
                            <a asp-controller="Improvement" asp-action="Index" class="btn btn-secondary form-control">Cancelar</a>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

