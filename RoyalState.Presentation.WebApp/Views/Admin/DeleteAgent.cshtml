@using RoyalState.Core.Application.ViewModels.Agent;
@model AgentViewModel

@{
    ViewData["Title"] = "Delete agent";
    Layout = "~/Views/Shared/_LayoutSmall.cshtml";
}

<div class="row mt-3">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-white">
                <h4>Are you sure you want to delete this agent?</h4>
            </div>
            <div class="card-body">
                <div class="p-2">
                    <p><span class="fw-bolder">Name: </span>@Model.FirstName</p>
                    <p><span class="fw-bolder">LastName: </span>@Model.LastName</p>
                    <p><span class="fw-bolder">Username: </span>@Model.UserName</p>
                    <p><span class="fw-bolder">Email: </span>@Model.Email</p>
                    <p><span class="fw-bolder">Phone: </span>@Model.Phone</p>
                </div>
            </div>
            <div class="card-footer bg-white">
                <form method="post" asp-controller="Admin" asp-action="DeleteAgent">

                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-6">
                            <a asp-controller="Admin" asp-action="AgentList" class="btn btn-dark col-12">Cancel</a>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-outline-danger col-12">Delete</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>