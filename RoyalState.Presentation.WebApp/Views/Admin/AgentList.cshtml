@using RoyalState.Core.Application.ViewModels.Agent;
@model List<AgentViewModel>
@{
    ViewData["Title"] = "Agents";
    Layout = "~/Views/Shared/_LayoutSmall.cshtml";
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Agents</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Property Quantity</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agent in Model)
                            {
                                <tr>
                                    <td>@agent.Id</td>
                                    <td>@($"{agent.FirstName} {agent.LastName}")</td>
                                    <td>@agent.Email</td>
                                    <td>@agent.PropertyQuantity</td>
                                    <td>
                                        <form method="post" asp-controller="Admin" asp-action="UpdateUserStatus">

                                                <input type="hidden" name="username" value="@agent.UserName" />
                                                <input type="hidden" name="controller" value="Admin" />

                                            <button type="submit" class="btn btn-sm btn-@(agent.EmailConfirmed ? "success" : "danger" )">@((agent.EmailConfirmed ? "Desactivate" : "Activate"))</button>
                                        </form>
                                        <a href="@Url.Action("DeleteAgent", "Admin", new { id = agent.Id })" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
