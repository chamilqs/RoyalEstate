@using RoyalState.Core.Application.ViewModels.SaleTypes;
@model SaleTypeViewModel;

@{
    ViewData["Title"] = "Delete SaleType";
    Layout = "~/Views/Shared/_LayoutSmall.cshtml";
}

<div class="row mt-3">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-white">
                <h4>Are you sure you want to delete this type of sale and the associated properties?</h4>
            </div>
            <div class="card-body">
                <div class="p-2">
                    <p><strong>Name: </strong> @Model.Name</p>
                    <p><strong>Description: </strong>@Model.Description</p>
                    <p><strong>Associated Properties: </strong>@Model.PropertiesQuantity</p>
                </div>
            </div>
            <div class="card-footer bg-white">
                <form method="post" asp-controller="SaleType" asp-action="Delete">
                    
                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-6">
                            <a asp-controller="SaleType" asp-action="Index" class="btn btn-dark col-12">Cancel</a>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-outline-danger col-12">Delete</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

