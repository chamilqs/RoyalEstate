@using RoyalState.Core.Application.ViewModels.Property;
@model PropertyViewModel
@{
    ViewData["Title"] = "Property Details";
    Layout = "~/Views/Shared/_LayoutSmall.cshtml";
}


<div class="site-wrap">

    <div class="site-section site-section-sm">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div>
                        <div class="slide-one-item home-slider owl-carousel">

                            @foreach (var item in Model.PropertyImages)
                            {
                                <div><img src="@item" alt="Image" class="img-fluid"></div>
                            }
                        </div>
                    </div>
                    <div class="bg-white property-body border-bottom border-left border-right">
                        <div class="row mb-5">
                            <div class="col-md-6">
                                <strong class="text-success h1 mb-3">RD$@Model.Price</strong>
                            </div>
                            <div class="col-md-6">
                                <ul class="property-specs-wrap mb-3 mb-lg-0  float-lg-right">
                                    <li>
                                        <span class="property-specs">Beds</span>
                                        <span class="property-specs-number">@Model.Bedrooms</span>

                                    </li>
                                    <li>
                                        <span class="property-specs">Baths</span>
                                        <span class="property-specs-number text-center">@Model.Bathrooms</span>

                                    </li>
                                    <li>
                                        <span class="property-specs">MT<sup>2</sup></span>
                                        <span class="property-specs-number">@Model.Meters</span>

                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                                <span class="d-inline-block text-black mb-0 caption-text">Property Type</span>
                                <strong class="d-block">@Model.PropertyTypeName</strong>
                            </div>
                            <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                                <span class="d-inline-block text-black mb-0 caption-text">Sale Type</span>
                                <strong class="d-block">@Model.SaleTypeName</strong>
                            </div>
                            <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                                <span class="d-inline-block text-black mb-0 caption-text">Code</span>
                                <strong class="d-block">@Model.Code</strong>
                            </div>
                        </div>

                        <div class="border-bottom py-3">
                            <h2 class="h4 text-black mb-4">Improvements</h2>
                            @if (Model.Improvements.Any())
                            {
                                @foreach (var item in Model.Improvements)
                                {
                                    <div class="row mb-3 align-items-center">
                                        <div class="col-auto">
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                        </div>
                                        <div class="col">
                                            <p class="mb-0">@item</p>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <p class="text-muted mb-0">No improvements listed for this property.</p>
                                    </div>
                                </div>
                            }
                        </div>



                        <h2 class="h4 text-black mt-3">Description of the property</h2>
                        <p class="text-justify">@Model.Description</p>

                        <div class="row no-gutters mt-5">
                            <div class="col-12">
                                <h2 class="h4 text-black mb-3">Gallery</h2>
                            </div>
                            @foreach (var item in Model.PropertyImages)
                            {
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <a href="@item" class="image-popup gal-item"><img src="@item" alt="Image" class="img-fluid"></a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="bg-white widget border rounded p-4">
                        <div class="circle-image mb-3">
                            <img src="@Model.AgentImage" alt="Image" class="card-img-top rounded-circle">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title mb-1 text-black">@Model.AgentFirstName @Model.AgentLastName</h5>
                            <p class="card-text text-muted">Agent in charge of this property</p>
                        </div>
                        <p class="fs-5 text-black text-center mb-3">Contact information</p>
                        <div class="card-text">
                            <p class="fs-6 mb-1">
                                <i class="bi bi-telephone-fill text-primary me-2"></i>
                                <a href="tel:@Model.AgentPhone">@Model.AgentPhone</a>
                            </p>
                            <p class="fs-6">
                                <i class="bi bi-envelope-fill text-primary me-2"></i>
                                <a href="mailto:@Model.AgentEmail">@Model.AgentEmail</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
